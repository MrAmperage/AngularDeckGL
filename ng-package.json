{
  "$schema": "node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist/angular-deck.gl-map",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "allowedNonPeerDependencies": [
    "@deck.gl/core",
    "@deck.gl/geo-layers",
    "@deck.gl/mapbox",
    "@deck.gl/mesh-layers"
  ],
  "assets": [
    {
      "glob": "**/*",
      "input": "./src/Modules/AngularMapLibreGLModule/Components/MapPlugins/Styles",
      "output": "./Styles"
    }
  ]
}
